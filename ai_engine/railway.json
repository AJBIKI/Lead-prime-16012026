{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "ai_engine/Dockerfile",
        "buildContext": "ai_engine"
    },
    "deploy": {
        "numReplicas": 1,
        "healthcheckPath": "/health",
        "restartPolicyType": "ON_FAILURE"
    }
}