# =====================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =====================================================
# Copy this to .env and fill in your production values

# Server
NODE_ENV=production
PORT=5000

# Database (use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lead_generator?retryWrites=true&w=majority

# AI Engine URL (update to your deployed AI engine URL)
AI_ENGINE_URL=https://your-ai-engine.railway.app

# =====================================================
# SECURITY - Generate secure random values!
# =====================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64').slice(0,32))"
ENCRYPTION_KEY=GENERATE_A_32_CHARACTER_KEY_HERE

# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=GENERATE_A_SECURE_SECRET_HERE
JWT_EXPIRES_IN=7d

# =====================================================
# GOOGLE OAUTH
# =====================================================
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Update these to your production URLs
GOOGLE_REDIRECT_URI=https://your-backend.railway.app/api/auth/google/callback
GOOGLE_APP_REDIRECT_URI=https://your-backend.railway.app/api/app-auth/google/callback

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend.vercel.app

# =====================================================
# EMAIL SENDING (Optional fallbacks)
# =====================================================
SENDGRID_API_KEY=your-sendgrid-api-key

# SMTP fallback (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Revenue Engine
