# Server Configuration
PORT=5000
MONGODB_URI=mongodb://localhost:27017/lead_generator
AI_ENGINE_URL=http://localhost:8000
LOG_LEVEL=info

# ============================================
# SECURITY - Token Encryption
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64').slice(0,32))"
ENCRYPTION_KEY=your-32-character-encryption-key

# ============================================
# JWT - Application Auth Tokens
# ============================================
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d

# ============================================
# Google OAuth (for App Login AND Email Sending)
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Callback for email account connection
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Callback for app login (same credentials, different callback)
GOOGLE_APP_REDIRECT_URI=http://localhost:5000/api/app-auth/google/callback

# ============================================
# Email Sending - Fallback (if Gmail OAuth not connected)
# ============================================
# Option 1: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Option 2: Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Default sender for platform emails (fallback mode only)
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Revenue Engine
