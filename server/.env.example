PORT=5000
MONGODB_URI=mongodb://localhost:27017/lead_generator
LOG_LEVEL=debug

# OpenAI API Key (for AI features)
OPENAI_API_KEY=your_openai_key_here

# Pinecone (for vector search - optional)
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_ENV=your_pinecone_env_here

# SMTP Configuration (for email sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=your_email@gmail.com
FROM_NAME=Your Name

# SendGrid (alternative email provider)
SENDGRID_API_KEY=your_sendgrid_key_here

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
GOOGLE_APP_REDIRECT_URI=http://localhost:5000/api/app-auth/google/callback

# Security Keys (IMPORTANT: Generate unique values for production!)
ENCRYPTION_KEY=generate_a_32_character_key_here
JWT_SECRET=generate_a_random_jwt_secret_here
